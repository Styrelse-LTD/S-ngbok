\newcommand{\CustomBackground}[1]{
    \backgroundsetup{
        scale=1,
        opacity=1,
        angle=0,
        color=black,
        contents={%
        \ifodd\value{page}
            \includegraphics[width=\paperwidth,height=\paperheight]{Media/#1}%%Odd pages
        \else
            \includegraphics[width=\paperwidth,height=\paperheight, angle=180]{Media/#1}%%Even pages
        \fi
        }
    }
}

\newcommand{\CustomPrintingBackground}[1]{%Used to add the 3mm shift at the bottom of the background when using the printing version 
    \backgroundsetup{
        scale=1,
        opacity=1,
        angle=0,
        color=black,
        vshift=-3mm, %This one is the fix
        contents={
        \ifodd\value{page}
          \includegraphics[width=\paperwidth,height=\paperheight,angle=180]{Media/#1}%%Odd pages
        \else
          \includegraphics[width=\paperwidth,height=\paperheight]{Media/#1}%%Even pages
        \fi
        }
    }
}



